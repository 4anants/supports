{
    "name": "it-support-portal",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev:frontend": "npm run dev -w frontend",
        "dev:backend": "npm run dev -w backend",
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "build": "npm run build -w frontend && npm run build -w backend",
        "install:all": "npm install",
        "postinstall": "npx prisma generate --schema=./backend/prisma/schema.prisma"
    },
    "dependencies": {
        "@libsql/client": "^0.17.0",
        "@prisma/adapter-libsql": "^7.2.0",
        "@prisma/client": "^5.22.0",
        "archiver": "^7.0.1",
        "axios": "^1.13.2",
        "bcryptjs": "^2.4.3",
        "better-sqlite3": "^12.6.0",
        "cloudinary": "^2.8.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.2",
        "express-fileupload": "^1.5.1",
        "express-rate-limit": "^8.2.1",
        "form-data": "^4.0.5",
        "fs-extra": "^11.3.3",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "node-cron": "^4.2.1",
        "nodemailer": "^6.9.16",
        "sharp": "^0.34.5",
        "uuid": "^11.0.4"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "prisma": "^5.22.0"
    }
}